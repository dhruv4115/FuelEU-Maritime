// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Route {
  id             Int     @id @default(autoincrement())
  routeId        String  @unique
  year           Int
  ghgIntensity   Float
  isBaseline     Boolean @default(false)
  fuelConsumption Float
}

model ShipCompliance {
  id        Int   @id @default(autoincrement())
  shipId    Int
  year      Int
  cbGco2eq  Float
  
  @@unique([shipId, year]) // A ship has one compliance record per year
}

model BankEntry {
  id          Int       @id @default(autoincrement())
  shipId      Int
  year        Int       // The year the surplus was banked
  amountGco2eq Float
  applied     Float     @default(0) // Track how much has been applied
  createdAt   DateTime  @default(now())
}

model Pool {
  id        Int      @id @default(autoincrement())
  year      Int
  createdAt DateTime @default(now())

  members PoolMember[]
  
  @@unique([year]) // Assuming one pool per year? Or this could be removed.
}

model PoolMember {
  id        Int   @id @default(autoincrement())
  poolId    Int
  shipId    Int
  cbBefore  Float
  cbAfter   Float
  
  pool Pool @relation(fields: [poolId], references: [id])
  
  @@unique([poolId, shipId]) // A ship can only be in a pool once
}